<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/colorPrimary"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:text="Add Details."
        android:textSize="50dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_4"
        android:inputType="text"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:layout_below="@+id/textView"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt5"
        android:inputType="text"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:layout_below="@+id/txt_4"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt5"
        android:fontFamily="sans-serif-thin"
        android:padding="10dp"

        android:text="Location Details." />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:padding="10dp"
        android:layout_below="@+id/textView2"
        />

    <LinearLayout
        android:id="@+id/linear_details"
        android:layout_below="@+id/description"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif-thin"


            android:text="Price" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint=""
            android:id="@+id/price_txt"
            android:layout_weight="1.5"
            />

    </LinearLayout>


    <Switch
        android:id="@+id/switch_disable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_details"
        android:checked="false"
        android:fontFamily="sans-serif-thin"
        android:padding="10dp"
        android:text="Disabled access"
        android:textOff="No"


        android:textOn="Yes" />



    <TextView
        android:layout_below="@+id/switch_disable"
        android:padding="10dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place type." />



    <RadioGroup
        android:layout_below="@+id/textView3"
        android:id="@+id/placeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"


        >

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:fontFamily="sans-serif-thin"
            android:text="Resturant" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:checked="false"
            android:fontFamily="sans-serif-thin"
            android:text="Public Toilet." />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:checked="false"
            android:fontFamily="sans-serif-thin"
            android:text="Shopping Center" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:checked="false"
            android:fontFamily="sans-serif-thin"
            android:text="Gas Station" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:checked="false"
            android:fontFamily="sans-serif-thin"
            android:text="Bar" />






    </RadioGroup>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeGroup"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif-thin"
        android:padding="10dp"

        android:text="Add" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAdd"
        android:layout_marginTop="5dp"
        android:background="@color/darkBlue"
        android:fontFamily="sans-serif-thin"
        android:padding="10dp"
        android:text="cancel" />
</RelativeLayout>
